<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- calculator -->
	<bean id="calculator" class="ex04_xml.Calculator"/>
	
	<!-- BMICalculator  생성자이용-->
	<bean id ="bmiCalculator" class="ex04_xml.BMICaculator">
		<constructor-arg value="20"/>
		<constructor-arg value="25"/>
		<constructor-arg value="30"/>
		<constructor-arg ref="calculator"/>
		
	</bean>
	
<!-- Member setter를 이용 -->
	<bean id ="member" class="ex04_xml.Member">
		<property name="name" value="james"/>
		<property name="height" value="175.5"/>
		<property name="weight" value="75.5"/>
		
		<property name="bmiCaculator" ref="bmiCalculator"/>
		<property name="services">
			<list>
				<value>개인PT</value>
				<value>스피닝</value>
				<value>요가</value>
			</list>
		</property>
	</bean>
	
</beans>
